Create table User{
    PID int,
    LastName varchar(255),
    FirstName varchar(255),
    PRIMARY KEY (PID) 
}

Create table password{
	PID int,
    password varchar(255),
	PRIMARY KEY (PID)
}

--Erick's Table 
CREATE TABLE EVENT 
(EID INT, 
FIRSTNAME VARCHAR(50), 
LASTNAME VARCHAR(50), 
DATE DATE PRIMARY KEY, 
ADDRESS VARCHAR(30),
CITY VARCHAR(20),
STATE VARCHAR(20)
PRIMARY KEY (EID));

CREATE TABLE EVENTROSTER
(EID INT,
PID INT,
PRIMARY KEY(PID),
PRIMARY KEY(EID)); 

CREATE TABLE CONTRIBUTIONS
(EID INT, 
PID INT, 
AMOUNT MONEY,
PRIMARY KEY (PID),
PRIMARY KEY(EID)); 
--End of Erick's Table 

-- Ahsan's Table
drop table if exists roles;

create table roles (

	rid int primary key,
	roleslist varchar

);

create table jobs (

	jid int primary key,
	eid int,
	pid int, 
	title varchar,
	intime time,
	outtime time

);

insert into roles(rid, roleslist) values (1, 'Employee');
insert into roles(rid, roleslist) values (2, 'Volunteer');
insert into roles(rid, roleslist) values (3, 'Adminstrator');
insert into roles(rid, roleslist) values (4, 'General User');

--select * from roles;
-- end Ahsan's Tables


-- Jason's Tables
drop table if exists userInfo

create table userInfo (
    PID int,
    address varchar,
    phoneNumber varchar,
    userEmail varchar
    PRIMARY KEY (PID)
);

drop table if exists permissions

create table permissions (
    RID int,
    read char,
    edit char,
    addUser char,
    updateDB char,
    viewAllUserInfo char
    PRIMARY KEY (RID)
);

create table last_login (
    PID integer NOT NULL,
    lastlogin timestamp without time zone
);
-- end Jason's tables JPN
