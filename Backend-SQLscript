CREATE TABLE UserPassword(
    PID INT,
    password VARCHAR(255),
    PRIMARY KEY (PID)
);

CREATE TABLE UserInfo (
    PID INT,
    address VARCHAR(255),
    phoneNumber VARCHAR(12),
    userEmail VARCHAR(255),
    RID INT, 
    PRIMARY KEY (PID)
);
