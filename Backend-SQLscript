INSERT INTO permissions(RID, read, edit, addUser, updateDB, viewAllUserInfo) VALUES (4, 'Y', 'N', 'Y', 'N', 'N');

CREATE TABLE Last_Login (
    PID INT,
    lastlogin TIMESTAMP
);

