CREATE TABLE UserName(
    PID INT AUTO_INCREMENT,
    LastName VARCHAR(255),
    FirstName VARCHAR(255),
    PRIMARY KEY (PID) 
);

CREATE TABLE UserPassword(
    PID INT,
    password VARCHAR(255),
    PRIMARY KEY (PID)
);

CREATE TABLE UserInfo (
    PID int,
    address varchar,
    phoneNumber varchar,
    userEmail varchar
    RID int, 
    PRIMARY KEY (PID)
);
insert into userInfo(PID, address, phoneNumber, userEmail, RID) values (001, '34 Awesome Ave.', '518-775-7775', "nnnj@company.com", 1); 
insert into userInfo(PID, address, phoneNumber, userEmail, RID) values (002, '37 Best Ave.', '518-665-8899', "beez@email.com", 2);
insert into userInfo(PID, address, phoneNumber, userEmail, RID) values (003, '43 Sheezy St.', '518-889-0099', "sneezyj@company.com", 3); 
insert into userInfo(PID, address, phoneNumber, userEmail, RID) values (9999, '34 Random Ave.', '518-009-8877', "rando@email.com", 4);


--Erick's Table 
CREATE TABLE Event 
(EID INT PRIMARY KEY, 
FirstName VARCHAR(50), 
LastName VARCHAR(50), 
Date DATE PRIMARY KEY, 
Address VARCHAR(30),
City VARCHAR(20),
State VARCHAR(20)
);

CREATE TABLE EventRoster
(EID INT,
PID INT,
PRIMARY KEY(PID),
PRIMARY KEY(EID)); 

CREATE TABLE Contributions
(EID INT, 
PID INT, 
Amount MONEY,
PRIMARY KEY (PID),
PRIMARY KEY(EID)); 
--End of Erick's Table 

-- Ahsan's Table
drop table if exists roles;

CREATE TABLE Roles (
	RID INT PRIMARY KEY,
	roleslist VARCHAR(255)
);

CREATE TABLE Jobs (
	JID INT PRIMARY KEY,
	EID INT,
	PID IND, 
	title VARCHAR(255),
	intime TIME,
	outtime TIME
);

insert into roles(rid, roleslist) values (1, 'Employee');
insert into roles(rid, roleslist) values (2, 'Volunteer');
insert into roles(rid, roleslist) values (3, 'Adminstrator');
insert into roles(rid, roleslist) values (4, 'General User');

